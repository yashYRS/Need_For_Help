<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dry_cdf.need_for_help.FinalActivity">

    <Button
        android:id="@+id/button_Dialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="DIAL"
        app:layout_constraintBottom_toBottomOf="@+id/editText_selectedNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_selectedNo"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/button_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SEND MAIL"
        app:layout_constraintBottom_toBottomOf="@+id/editText_selectedEmail"
        app:layout_constraintEnd_toEndOf="@+id/button_Dialer"
        app:layout_constraintStart_toStartOf="@+id/button_Dialer"
        app:layout_constraintTop_toTopOf="@+id/editText_selectedEmail"
        app:layout_constraintVertical_bias="0.727" />

    <EditText
        android:id="@+id/editText_selectedNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Selected Number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_Dialer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <EditText
        android:id="@+id/editText_selectedEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Selected Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editText_selectedNo"
        app:layout_constraintEnd_toStartOf="@+id/button_Dialer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText_selectedNo" />

</android.support.constraint.ConstraintLayout>
